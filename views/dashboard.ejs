<%- include('./header.ejs') %> 

<div class="container my-4">
    
    <a href="/add_article">
        <button class="btn btn-info float-right">Add</button>
    </a>
    <div class="row">
        <div class="col-md-8 m-auto">
            <form class="search-input d-flex" action="/dashboard/search" method="GET">
                <input class="form-control" type="search" name="searchTerm" type="text" placeholder="search">
                <button class="btn btn-outline-success ml-2" type="submit">Search</button>
            </form>
        </div>
    </div>
</div>


<div class="container Articles-Container">


    <div class="row row-cols-1 row-cols-md-2">
        <% for( let i = 0; i < articles_data.length; i++ ) { %>
            <div class="col mb-4">
                <div class="card grayBG">
                    <a href="/article/<%= articles_data[i]._id %>"><img src="../<%= articles_data[i].imgURL %> " class="card-img-top" alt="article-cover"></a>
                    <div class="card-body grayC card-sized">
                        <a href="/article/<%= articles_data[i]._id %>" class="dec-off"><h5 class="card-title"><%= articles_data[i].title %></h5></a>
                        <p class="card-text t"><%= articles_data[i].post %></p>
                    </div>
                    <div class="card-footer d-flex">
                        <small class="text-muted">Last updated : <%= articles_data[i].date %> </small>
                        <div class="ml-auto">
                            <a href="/article/<%= articles_data[i]._id %>" class="btn btn-primary">Read More</a>
                            <a href="/edit/<%= articles_data[i]._id %>" class="btn btn-info">Edit</a>
                            <a href="/delete/<%= articles_data[i]._id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>   
                </div>
            </div>
        <% } %>
    </div>
    

<%- include('./footer.ejs') %> 